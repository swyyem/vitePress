{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "vite.config.ts",
    "vitest.config.ts",
    "components/**/*.vue", // 如果组件在单独目录
    "components/**/*.ts",
    "components/src/**/**/*.vue", // 如果组件在单独目录
  ],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "types": [
      "node",
      "vite/client",
      "vue"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@swy-ui/*": ["src/swy-ui/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  }
}
